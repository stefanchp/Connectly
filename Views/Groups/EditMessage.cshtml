@model GroupMessage
@{
    ViewData["Title"] = "Edit message";
}

<div class="page-heading">
    <h2>Edit message</h2>
    <p class="text-muted">Update your message content.</p>
</div>

<div class="app-card">
    <form asp-action="EditMessage" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <div class="mb-3">
            <label class="form-label">Title</label>
            <input name="title" class="form-control" value="@Model.Title" />
        </div>
        <div class="mb-3">
            <label class="form-label">Content</label>
            <textarea name="content" class="form-control" rows="3">@Model.Content</textarea>
        </div>
        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-action="Details" asp-route-id="@Model.GroupId" class="btn btn-outline-primary">Cancel</a>
        </div>
    </form>
</div>
